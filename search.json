---
layout: null
---
[
{% for post in site.posts %}
{% comment %} Capture all ingredient names into a single string {% endcomment %}
{% capture ingredient_list %}
{% for group in post.ingredients %}
{% if group.section %}
{% for item in group.items %}
{{ item.name }}
{% endfor %}
{% else %}
{{ group.name }}
{% endif %}
{% endfor %}
{% endcapture %}

{
"title": "{{ post.title | escape }}",
"url": "{{ post.url | relative_url }}",
"date": "{{ post.date | date_to_string }}",
"description": "{{ post.description | escape }}",
"ingredients": "{{ ingredient_list | strip_newlines | strip | escape }}"
}
{% unless forloop.last %},{% endunless %}
{% endfor %}
]
